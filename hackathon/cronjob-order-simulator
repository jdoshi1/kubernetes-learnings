kind: CronJob
apiVersion: batch/v1beta1
metadata:
  name: rvstore-order-simulator-job
spec:
  schedule: "*/1 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: k8s-rvstore-order-simulator
            image: vergeops/k8s-rvstore-order-simulator:1.0
            env:
            - name: SPRING_PROFILES_ACTIVE
              value: compose
          restartPolicy: OnFailure
